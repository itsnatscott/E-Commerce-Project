<!DOCTYPE>
<html>
    <body>
        <header>
            <a href = "/index" ><h1>T-Shirt.Ly</h1></a>
            	    </header>
            	     <ul>
		  	<div class="shirtpic"><img src="<%= tshirtId.img_url %>"></div>
		  	<li>$<%= tshirtId.price %></li>
		</ul>

            <div class="adminBar">
	            <form action="/index/<%= tshirtId.id %>" method="POST">
		            <input type="text" name="email" placeholder="Your email" required>
		            <select type="text" name="quant" placeholder="Quantity" required>
                        <%  tshirtId.quantity.times do |num| %>
                        <option><%= num + 1 %></option>
                        <% end %>
                        </select>
		        	<button>Confirm</button>
		         </form>
	        </div>
	</body>
</html>